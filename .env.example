# Supabase
# IMPORTANT: Get these from your Supabase project settings -> API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# ANON KEY (public) - Safe for browser use, respects Row Level Security
# This is the "anon" / "public" key from Supabase dashboard
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key

# SERVICE ROLE KEY (secret) - Server-side only! NEVER expose to browser
# This key bypasses Row Level Security - only use in API routes
# WARNING: If you accidentally put the service_role key in NEXT_PUBLIC_SUPABASE_ANON_KEY,
# you will see "Forbidden use of secret API key in browser" error
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key

# Database (legacy - using Supabase now)
DATABASE_URL=postgres://...

# Auth
NEXTAUTH_SECRET=...
NEXTAUTH_URL=...

# Stripe
STRIPE_SECRET_KEY=sk_live_or_test...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email
MAILERLITE_API_KEY=...

# Integrations
ZAPIER_WEBHOOK_URL_CLASSIFICATION=...
ZAPIER_WEBHOOK_URL_CALCULATOR=...
GOOGLE_DRIVE_FOLDER_ID=...
